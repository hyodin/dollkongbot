# ============================================================
# Google Gemini API 설정
# ============================================================
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TIMEOUT=60

# ============================================================
# Qdrant 벡터 데이터베이스 설정
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=documents
QDRANT_USE_LOCAL_STORAGE=false
QDRANT_STORAGE_PATH=./qdrant_storage
QDRANT_TIMEOUT=30

# ============================================================
# 임베딩 모델 설정
# ============================================================
EMBEDDING_MODEL=jhgan/ko-sbert-nli
EMBEDDING_BATCH_SIZE=32

# ============================================================
# 애플리케이션 설정
# ============================================================
DEBUG=false
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000

# ============================================================
# 로그 필터링 설정 (선택사항)
# ============================================================
# 외부 라이브러리의 불필요한 로그를 제어합니다.
# true: 해당 로그 숨김 (WARNING 이상만 출력)
# false: 모든 로그 출력

# watchfiles 로그 필터링 (파일 변경 감지)
# "1 change detected" 같은 메시지 제외
FILTER_WATCHFILES=true

# uvicorn 접속 로그 필터링 (HTTP 요청)
# "GET /api/chat 200 OK" 같은 메시지 제외
FILTER_UVICORN_ACCESS=false

# httpx/httpcore 로그 필터링 (HTTP 클라이언트)
# API 호출 상세 로그 제외
FILTER_HTTP_CLIENTS=true

# transformers 로그 필터링 (Hugging Face)
# 모델 로딩 경고 메시지 제외
FILTER_TRANSFORMERS=true

# ============================================================
# 네이버웍스 OAuth 설정
# ============================================================
# 네이버웍스 앱 등록 시 발급받은 Client ID
NAVERWORKS_CLIENT_ID=your_naverworks_client_id_here

# 네이버웍스 앱 등록 시 발급받은 Client Secret
NAVERWORKS_CLIENT_SECRET=your_naverworks_client_secret_here

# 네이버웍스 도메인 ID (선택사항)
NAVERWORKS_DOMAIN_ID=your_domain_id_here

# 네이버웍스 Publisher Token (선택사항)
NAVERWORKS_PUBLISHER_TOKEN=your_publisher_token_here

# 네이버웍스 OAuth 토큰 교환 URL (기본값 사용 권장)
NAVERWORKS_TOKEN_URL=https://auth.worksmobile.com/oauth2/v2.0/token

# 네이버웍스 사용자 정보 API URL (기본값 사용 권장)
NAVERWORKS_USER_INFO_URL=https://www.worksapis.com/v1.0/users/me

# ============================================================
# 이메일 설정
# ============================================================
# 관리자 이메일 (문의 메일 수신자)
ADMIN_EMAIL=admin@yourcompany.com

# 발송자 이메일 (시스템 계정)
SENDER_EMAIL=noreply@yourcompany.com