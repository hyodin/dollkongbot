# ============================================================
# 운영 환경 설정
# ============================================================
# 이 파일을 .env.production으로 복사하여 실제 값을 입력하세요
# 사용법: cp env.production.example .env.production

# ============================================================
# Google Gemini API 설정
# ============================================================
GOOGLE_API_KEY=your_production_google_api_key_here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_TIMEOUT=60

# ============================================================
# Qdrant 벡터 데이터베이스 설정 (운영)
# ============================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=documents
QDRANT_USE_LOCAL_STORAGE=false
QDRANT_STORAGE_PATH=./qdrant_storage
QDRANT_TIMEOUT=30

# ============================================================
# 임베딩 모델 설정
# ============================================================
EMBEDDING_MODEL=jhgan/ko-sbert-nli
EMBEDDING_BATCH_SIZE=32

# ============================================================
# 애플리케이션 설정 (운영)
# ============================================================
DEBUG=false
LOG_LEVEL=INFO
APP_HOST=0.0.0.0
APP_PORT=8000

# ============================================================
# 로그 필터링 설정 (운영 환경용)
# ============================================================
# 운영 환경에서는 필요한 로그만 출력하도록 설정

FILTER_WATCHFILES=true
FILTER_UVICORN_ACCESS=false  # 접속 로그는 필요 시 활성화
FILTER_HTTP_CLIENTS=true     # 외부 HTTP 클라이언트 로그 필터링
FILTER_TRANSFORMERS=true

# ============================================================
# 네이버웍스 OAuth 설정 (운영)
# ============================================================
NAVERWORKS_CLIENT_ID=your_production_client_id_here
NAVERWORKS_CLIENT_SECRET=your_production_client_secret_here
NAVERWORKS_DOMAIN_ID=your_production_domain_id_here
NAVERWORKS_PUBLISHER_TOKEN=your_production_publisher_token_here
NAVERWORKS_TOKEN_URL=https://auth.worksmobile.com/oauth2/v2.0/token
NAVERWORKS_USER_INFO_URL=https://www.worksapis.com/v1.0/users/me

# ============================================================
# 이메일 설정 (운영)
# ============================================================
ADMIN_EMAIL=admin@yourcompany.com
SENDER_EMAIL=noreply@yourcompany.com

